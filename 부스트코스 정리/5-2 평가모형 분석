/* rfm모델 */

create table rfm as
select a.*
		,b.구매금액
        ,b.구매횟수
  from customer as a
  left
  join (
		select a.mem_no
				,sum(a.sales_qty * b.price) as 구매금액
                ,count(a.order_no) as 구매횟수
		  from sales as a
          left 
          join product as b
            on a.product_code = b.product_code
		 where year(a.order_date) = '2020'
         group 
            by a.mem_no
		  )as b
		on a.mem_no = b.mem_no;

select * from rfm;

/* rfm 세분화별 회원수 */

select *
       ,case when 구매금액 > 5000000 then 'vip'
			 when 구매금액 > 1000000 or 구매횟수 > 3 then '우수회원'
             when 구매금액 >       0 then '일반회원'
             else '상세회원' end as 회원세분화
  from rfm;
  
select 회원세분화
		,count(mem_no) as 회원수
  from (
		select *
				,case when 구매금액 > 5000000 then 'vip'
					  when 구매금액 > 1000000 or 구매횟수 > 3 then '우수회원'
                      when 구매금액 >       0 then '일반회원'
                      else '잠재회원' end as 회원세분화
				from rfm
			   )as a
		  group 
             by 회원세분화
		  order
             by 회원수 asc;